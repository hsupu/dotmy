{
	persist_config off
	admin off

	# order webdav last
	order webdav before file_server
}

http://:50001 {
	bind 0.0.0.0

	basicauth /webdav/* {
		# pass is generated by "caddy hash-password"
		xp $2a$14$8Rg1OQkuhKfT2wQ4cchAleiDmlRk72JTyKxsYJvbLeVLcp3Xzpl6C
	}

	handle /webdav/* {
		webdav {
			root "{$WEBROOT}"
			prefix /webdav
		}
	}
	redir /webdav /webdav/

	file_server * {
		root "{$WEBROOT}"
		browse
	}
}
