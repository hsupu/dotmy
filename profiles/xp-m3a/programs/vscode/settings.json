// 将设置放入此文件中以覆盖默认设置
{
    "[markdown]": {
        "editor.fontFamily": "'Iosevka PU-5', 'Sarasa Term SC'"
    },
    "[python]": {
        "editor.formatOnType": true
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.fontFamily": "'Iosevka PU-5', 'Sarasa Term SC', Cousine, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": false,
    "editor.fontSize": 13,
    // 小地图滑块
    "editor.minimap.showSlider": "always",
    "editor.renderLineHighlight": "all",
    // 选取框圆角
    "editor.roundedSelection": false,
    "editor.rulers": [
        140
    ],
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoGuessEncoding": true,
    "files.hotExit": "onExitAndWindowClose",
    // exts: Find all references
    "find.all.references.engine": "rg",
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.defaultDateFormat": "hh:mm:ss, YYYY-MM-DD",
    "gitlens.defaultDateShortFormat": "YY-MM-DD",
    "gitlens.hovers.currentLine.over": "line",
    "jupyter.alwaysTrustNotebooks": true,
    "latex-workshop.latex.autoBuild.run": "onFileChange",
    "latex-workshop.latex.recipes": [
        {
            "name": "xelatex",
            "tools": [
                "xelatex"
            ]
        },
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        },
    ],
    "latex-workshop.latex.tools": [
        {
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOC%"
            ],
            "command": "/Library/TeX/texbin/latexmk",
            "name": "latexmk"
        },
        {
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "command": "/Library/TeX/texbin/xelatex",
            "name": "xelatex"
        },
        {
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "command": "/Library/TeX/texbin/pdflatex",
            "name": "pdflatex"
        },
        {
            "args": [
                "%DOCFILE%"
            ],
            "command": "/Library/TeX/texbin/bibtex",
            "name": "bibtex"
        },
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    "markdown.preview.doubleClickToSwitchToEditor": false,
    // markdown
    "markdownlint.config": {
        "MD013": false,
        "MD025": false,
        "MD041": true
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "rust-client.channel": "stable",
    "rust.mode": "rls",
    "rust.rls": null,
    "security.workspace.trust.untrustedFiles": "open",
    // 终端程序
    "terminal.external.osxExec": "iTerm.app",
    "window.commandCenter": false,
    "window.dialogStyle": "custom",
    "workbench.colorTheme": "Default Dark+",
    // 是否保留命令面板的最后一次输入
    "workbench.commandPalette.preserveInput": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.sideBar.location": "left"
}